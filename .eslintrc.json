{
  "extends": ["plugin:react/recommended", "standard"],
  "root": true,
  "parser": "babel-eslint",
  "settings": {
    "react": {
      "version": "16.4.2"
    }
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "env": {
      "node": true,
      "es6": true,
      "browser": true
  },
  "rules": {
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "never",
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    "prefer-const": "error",
    "no-var": "error",
    "react/prop-types": [0]
  }
}
